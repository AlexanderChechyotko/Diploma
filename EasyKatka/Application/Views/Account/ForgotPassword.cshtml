@model Application.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "ForgotPassword";
}

<div class="account-container">
    <div class="account-title">Восстановление пароля</div>
    @using (Html.BeginForm("ForgotPassword", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "app-form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "form-text-danger" })
        <div class="form-group">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-input", placeholder = "Введите email" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "form-text-danger" })
        </div>
        <div class="form-group">
            <input type="submit" class="form-submit b-action-button" value="Отправить" />
        </div>
    }
</div>

